FROM centos:7
RUN yum install --assumeyes --disablerepo=updates* \
  https://downloads.eucalyptus.cloud/software/euca2ools/3.4/rhel/7/x86_64/euca2ools-release-3.4-2.2.as.el7.noarch.rpm
RUN yum install --assumeyes --disablerepo=updates* \
  epel-release
RUN yum install --assumeyes --disablerepo=updates* \
  euca2ools
