ARG PHP_VERSION=7.4
FROM php:${PHP_VERSION}-fpm

ARG PSR_VERSION=0.7.0
ARG PHALCON_VERSION=4.0.0
ARG PHALCON_EXT_PATH=php7/64bits

# Install Phalcon library
RUN set -xe && \
        # Download PSR, see https://github.com/jbboehr/php-psr
        curl -LO https://github.com/jbboehr/php-psr/archive/v${PSR_VERSION}.tar.gz && \
        tar xzf ${PWD}/v${PSR_VERSION}.tar.gz && \
        # Download Phalcon
        curl -LO https://github.com/phalcon/cphalcon/archive/v${PHALCON_VERSION}.tar.gz && \
        tar xzf ${PWD}/v${PHALCON_VERSION}.tar.gz && \
        docker-php-ext-install -j $(getconf _NPROCESSORS_ONLN) \
            ${PWD}/php-psr-${PSR_VERSION} \
            ${PWD}/cphalcon-${PHALCON_VERSION}/build/${PHALCON_EXT_PATH} \
        && \
        # Remove all temp files
        rm -r \
            ${PWD}/v${PSR_VERSION}.tar.gz \
            ${PWD}/php-psr-${PSR_VERSION} \
            ${PWD}/v${PHALCON_VERSION}.tar.gz \
            ${PWD}/cphalcon-${PHALCON_VERSION} \
        && \
        php -m

# Install main extensions
RUN apt-get update \
    && apt-get install -y \
        libfreetype6-dev \
        libjpeg62-turbo-dev \
        libpng-dev \
        zlib1g-dev \
        libpq-dev \
        libxslt-dev \
        libicu-dev \
        libgeoip-dev \
        wget \
        vim \
        git \
        locales \
        zip \
        unzip \
        gzip \
        libzip-dev \
        libwebp-dev \
        libxpm-dev \
        libssh-dev \
        librabbitmq-dev \
        --no-install-recommends && rm -r /var/lib/apt/lists/*

RUN git clone https://github.com/rstgroup/php-signal-handler.git /usr/src/php/ext/signal_handler

RUN pecl install redis-4.3.0 xdebug amqp \
    && docker-php-ext-enable redis xdebug amqp \
    && docker-php-ext-configure gd --enable-gd --with-freetype --with-jpeg --with-webp --with-xpm \
    && docker-php-ext-install -j$(nproc) \
        bcmath \
        gd \
        iconv \
        intl \
        json \
        mysqli \
        pdo_pgsql \
        pgsql \
        sockets \
        pcntl \
        soap \
        xsl \
        zip \
        signal_handler \
    && apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false wget \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /tmp/* /var/tmp/* ~/.pearrc \
    ;

# Install PHP composer
RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');" \
	&& php composer-setup.php --install-dir=/usr/local/bin --filename=composer \
	&& php -r "unlink('composer-setup.php');"

COPY docker-php-xdebug docker-php-entrypoint /usr/local/bin/
COPY conf.d /usr/local/etc/php/conf.d

RUN chmod +x /usr/local/bin/docker-php-xdebug
RUN chmod +x /usr/local/bin/docker-php-entrypoint

ENTRYPOINT ["docker-php-entrypoint"]
##<autogenerated>##
WORKDIR /var/www/phalcon

EXPOSE 9001
CMD ["php-fpm"]
##</autogenerated>##
