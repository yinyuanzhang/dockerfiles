FROM debian:stable-slim

# This docker image provides all the prerequisites for building and
# testing the dynein code.

RUN apt-get -y update && apt-get -y upgrade && apt-get -y install apt-utils && apt-get -y install texlive-latex-extra texlive-xetex texlive-science texlive-bibtex-extra python3-matplotlib python-matplotlib g++ git inkscape make dvipng time
