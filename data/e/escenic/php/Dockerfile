FROM alpine:edge

RUN echo "http://dl-4.alpinelinux.org/alpine/edge/testing" >> /etc/apk/repositories \
    && apk add --update \
    supervisor \
    tini \
    php7 \
    php7-bcmath \
    php7-ctype \
    php7-curl \
    php7-exif \
    php7-iconv \
    php7-json \
    php7-mysqli \
    php7-mbstring \
    php7-opcache \
    php7-openssl \
    php7-pcntl \
    php7-pdo_mysql \
    php7-pdo_pgsql \
    php7-pdo_sqlite \
    php7-xmlwriter \
    php7-phar \
    php7-posix \
    php7-session \
    php7-xml \
    php7-mcrypt \
    php7-xsl \
    php7-zip \
    php7-zlib \
    php7-fpm \
    && rm -rf /var/cache/apk/*

COPY conf/php.conf /etc/php7/php-fpm.conf
COPY conf/php.ini  /etc/php7/conf.d/50-php.ini
COPY conf/supervisord.conf    /etc/supervisor/conf.d/supervisord.conf

ENTRYPOINT ["/sbin/tini", "--"]

EXPOSE 9000

WORKDIR /app

CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
