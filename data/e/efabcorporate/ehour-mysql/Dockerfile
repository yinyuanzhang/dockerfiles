##############################################################
FROM mysql:5.6
MAINTAINER Fredice NJAKO "fredice.njako@efab-corporate.com"
##########################################################

##########################################################
# Copy du dump sql
##########################################################
COPY database/mysql/fresh.mysql.sql /docker-entrypoint-initdb.d/fresh.mysql.sql
##########################################################

##########################################################
# Lancement du conteneur
##########################################################
ENTRYPOINT ["docker-entrypoint.sh"]
EXPOSE 3306
CMD ["mysqld"]
##########################################################