from ubuntu

maintainer Andre A. Boechat <boechat107@gmail.com>

run apt-get update
run apt-get install -y -q python python-pip python-dev \
        libxml2-dev libxslt-dev libffi-dev libxslt1-dev \
        zlib1g-dev libssl-dev \
        libpq-dev 

run \
    pip install pymongo && \
    pip install redis && \
    pip install scrapy
