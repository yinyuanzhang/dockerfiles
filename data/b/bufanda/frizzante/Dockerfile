FROM ruby:2.5.1
MAINTAINER Tobias Schlottke <tobias.schlottke@gmail.com>

RUN apt-get update && \
    apt-get install -y net-tools ffmpeg

# Install gems
ENV APP_HOME /app
ENV HOME /root
RUN mkdir $APP_HOME
WORKDIR $APP_HOME
COPY Gemfile* $APP_HOME/
RUN bundle install

# Upload source
COPY . $APP_HOME

# Start server
ENV PORT 4567
EXPOSE 4567
CMD ["ruby", "app.rb"]
