#################################---FROM---#####################################

FROM ubuntu

################################################################################

#################################---INFO---#####################################

MAINTAINER Lovrenc Avsenek <a.lovrenc@gmail.com>

################################################################################

#################################---ENV---######################################

ENV export DEBIAN_FRONTEND noninteractive

################################################################################

################################---BUILD---#####################################

RUN apt-get update && \
    apt-get upgrade --yes && \
    apt-get install --yes \
        curl \
        git \
        npm && \
    apt-get clean

RUN curl -sL https://deb.nodesource.com/setup_12.x | bash - \
    apt-get install -y -q \
        nodejs; \
    npm install -g npm
RUN npm install --global \
        gulpjs/gulp-cli \
        webpack \
        webpack-cli
################################################################################
