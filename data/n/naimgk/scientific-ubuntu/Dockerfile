FROM ubuntu

RUN apt-get update

# Install gcc and compiler essentials
# GNU Scientific Library
# Optimized matrix libraries OpenBLAS and ATLAS

RUN apt-get -y install build-essential libgsl-dev \
libopenblas-dev libatlas-base-dev 

# OpenMPI
# FFTW3 for Fourier transforms
# libopenmpi-dev openmpi-bin \
# libfftw3-dev libfftw3-mpi-dev
