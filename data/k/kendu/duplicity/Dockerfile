#################################---INFO---#####################################

FROM debian:latest
MAINTAINER DevOps <devops@kendu.si>

################################################################################

#################################---ENV---######################################

ENV DEBIAN_FRONTEND noninteractive

################################################################################

################################---BUILD---#####################################

RUN apt-get update && \
    apt-get upgrade --yes --force-yes && \
    apt-get install --yes --force-yes \
        python-paramiko \
        duplicity \
        openssl \
        python \
    && \
    apt-get clean


