#The postgresql container

FROM postgres:9.4
MAINTAINER Kendu DevOps Team <devops@kendu.si>

# Set locales.
RUN localedef -i en_US -c -f UTF-8 -A /usr/share/locale/locale.alias en_US.UTF-8
ENV LANG en_US.UTF-8
