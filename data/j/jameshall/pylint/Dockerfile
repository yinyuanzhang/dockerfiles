RUN pip3 install pylint==$PYLINT_VERSION && \
    pip3 install coverage && \
    pip3 install tornado && \
    pip3 install mock && \
    pip3 install python-jose && \
    pip3 install cryptography && \
    pip3 install ldap3 && \
    pip3 install requests && \
    pip3 install jwcrypto  && \
    pip3 install redis
