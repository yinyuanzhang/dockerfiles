FROM ubuntu:14.04
RUN apt update
RUN apt install -y rpm2cpio cpio wget gfortran gcc ragel libssl-dev make g++ cmake git autogen \
	libwxgtk3.0-dev libfreetype6-dev libglew-dev libcppunit-dev python3-psutil pkg-config \
	valgrind libboost-test-dev language-pack-en-base libboost-python-dev python3-dev sshpass \
	libopenblas-dev
ENV LANG en_US.utf-8
