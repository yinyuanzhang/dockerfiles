FROM node:7-slim

LABEL name="mugtalk"

MAINTAINER Mat√≠as Lescano <mjlescano@protonmail.com>

RUN npm set progress=false && npm install -g yarn

COPY ["package.json", "yarn.lock", ".yarnclean", "/usr/src/"]

