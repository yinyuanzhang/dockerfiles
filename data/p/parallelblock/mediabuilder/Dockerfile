FROM alpine
MAINTAINER parallelblock <joe@parallelblock.com>

RUN apk add --no-cache make inkscape curl bash zip

ADD https://github.com/google/fonts/raw/master/apache/roboto/Roboto-Regular.ttf /usr/share/fonts/TTF/Roboto-Regular.ttf
ADD https://github.com/google/fonts/raw/master/apache/robotocondensed/RobotoCondensed-Regular.ttf /usr/share/fonts/TTF/RobotoCondensed-Regular.ttf

