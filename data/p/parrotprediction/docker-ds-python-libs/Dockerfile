FROM python:3.5
MAINTAINER Parrot Prediction Ltd. <contact@parrotprediction.com>s

# Essentials
RUN pip3.5 install numpy scipy pandas scikit-learn

# LIME
RUN pip3.5 install lime

# Traces
RUN pip3.5 install traces

# Dplython
RUN pip3.5 install dplython

# TSFRESH
RUN pip3.5 install tsfresh

# Arrow
RUN pip3.5 install arrow

# TPOT
RUN pip3.5 install tpot

# PandaSQL
RUN pip3.5 install pandasql

CMD ["python3"]
