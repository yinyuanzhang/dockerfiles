FROM node:7

RUN mkdir -p /app
WORKDIR /app

ADD http_server.js /app

EXPOSE 8192
EXPOSE 443

COPY ./docker-entrypoint.sh /
RUN chmod a+x /docker-entrypoint.sh
ENTRYPOINT ["/docker-entrypoint.sh"]

