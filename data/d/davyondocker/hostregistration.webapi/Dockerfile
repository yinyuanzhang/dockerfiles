FROM mcr.microsoft.com/dotnet/core/aspnet:2.2-stretch-slim AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/core/sdk:2.2-stretch AS build
WORKDIR /src/Host.UI.WebAPI
COPY . .
RUN dotnet restore
RUN dotnet build "Host.UI.WebAPI.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "Host.UI.WebAPI.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Host.UI.WebAPI.dll"]